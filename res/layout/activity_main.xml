<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tipcalculator.MainActivity$PlaceholderFragment" >

    <EditText
        android:id="@+id/totalAmountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:ems="10" />

   <Button
       android:id="@+id/TipPercent10Button"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/totalAmountText"
       android:layout_below="@+id/totalAmountText"
       android:layout_marginTop="37dp"
       android:onClick="onTipPercentClick"
       android:text="@string/TipPercent10" />

   <Button
       android:id="@+id/TipPercent20Button"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/textView1"
       android:layout_alignRight="@+id/totalAmountText"
       android:onClick="onTipPercentClick"
       android:text="@string/TipPercent20" />

   <Button
       android:id="@+id/TipPercent15Button"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_above="@+id/textView1"
       android:layout_centerHorizontal="true"
       android:onClick="onTipPercentClick"
       android:text="@string/TipPercent15" />

   <TextView
       android:id="@+id/textView1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/TipPercent10Button"
       android:layout_marginTop="54dp"
       android:text="@string/TipAmount" />

   <EditText
       android:id="@+id/tipAmountText"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBaseline="@+id/textView1"
       android:layout_alignBottom="@+id/textView1"
       android:layout_alignLeft="@+id/TipPercent10Button"
       android:ems="10"
       android:inputType="numberDecimal" />

   <TextView
       android:id="@+id/textView2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/totalAmountText"
       android:layout_alignParentTop="true"
       android:layout_marginTop="48dp"
       android:text="@string/totalAmountLabel"
       android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
